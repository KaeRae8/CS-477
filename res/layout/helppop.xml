<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:id="@+id/poptext"
		android:layout_width="270dp"
		android:layout_height="fill_parent"
		android:background="#ED555555"
		android:layout_x="25dp"
		android:layout_y="50dp">
	</TextView>
	
	<TextView
		android:id="@+id/poplabel"
		android:layout_width="100dp"
		android:layout_height="30dp"
		android:text="Help"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:layout_x="140dp"
		android:layout_y="50dp">
	</TextView>
		
	<TextView
		android:id="@+id/poptext"
		android:layout_width="250dp"
		android:layout_height="260dp"
		android:text="Press and hold an item to edit it.\n\nPress the side bar on the right side of the screen to select, create, delete and sort your lists.\n\n"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:gravity="center_vertical|center_horizontal"
		android:layout_x="32dp"
		android:layout_y="100dp">
	</TextView>
	
	<Button
		android:id="@+id/closehelp_btn"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="Close"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_x="110dp"
		android:layout_y="405dp">
	</Button>
	
</AbsoluteLayout>
