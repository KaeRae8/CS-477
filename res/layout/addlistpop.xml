<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:id="@+id/poptext"
		android:layout_width="270dp"
		android:layout_height="fill_parent"
		android:background="#ED555555"
		android:layout_x="25dp"
		android:layout_y="50dp">
	</TextView>
	
	<TextView
		android:id="@+id/poplable"
		android:layout_width="150dp"
		android:layout_height="30dp"
		android:text="Create New List"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:layout_x="95dp"
		android:layout_y="50dp">
	</TextView>
	
	<AutoCompleteTextView
	    android:id="@+id/name_fill"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_x="30dp"
		android:layout_y="100dp"
	    android:hint="List Name..." >
	 <requestFocus />
	</AutoCompleteTextView>
	

	<LinearLayout
        android:id="@+id/content"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
		android:layout_y="150dp"
        android:orientation="horizontal" >
        
        <RadioGroup
            android:id="@+id/list_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:textColor="#ccFFFFFF"
                android:checked="true"
                android:text="Personal" />

            <RadioButton
                android:id="@+id/group_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:textColor="#ccFFFFFF"
                android:text="Group" />
        
        </RadioGroup>
        
      </LinearLayout>

	
	<Button
		android:id="@+id/confirmaddlist_btn"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:text="Create List"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_x="145dp"
		android:layout_y="405dp">
	</Button>

	<Button
		android:id="@+id/canceladdlist_btn"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="Cancel"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_x="25dp"
		android:layout_y="405dp">
	</Button>
	
</AbsoluteLayout>
