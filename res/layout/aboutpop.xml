<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:id="@+id/poptext"
		android:layout_width="270dp"
		android:layout_height="fill_parent"
		android:background="#ED555555"
		android:layout_x="25dp"
		android:layout_y="50dp">
	</TextView>
	
	<TextView
		android:id="@+id/poplabel"
		android:layout_width="100dp"
		android:layout_height="30dp"
		android:text="About"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:layout_x="130dp"
		android:layout_y="50dp">
	</TextView>
		
	<TextView
		android:id="@+id/poptext"
		android:layout_width="250dp"
		android:layout_height="260dp"
		android:text="Fair Share\n\nCreated For: CS477\n\nCreated By:\n\nColin Gray\nKenneth Shaw\nMargret Mckever\nAlex Koch"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:gravity="center_vertical|center_horizontal"
		android:layout_x="32dp"
		android:layout_y="100dp">
	</TextView>
	
	<Button
		android:id="@+id/closeabout_btn"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="Close"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_x="110dp"
		android:layout_y="405dp">
	</Button>
	
</AbsoluteLayout>
