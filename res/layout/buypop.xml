<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:id="@+id/poptext"
		android:layout_width="270dp"
		android:layout_height="fill_parent"
		android:background="#EDDDDDDD"
		android:layout_x="25dp"
		android:layout_y="50dp">
	</TextView>
	
	<TextView
		android:id="@+id/poplabel"
		android:layout_width="100dp"
		android:layout_height="30dp"
		android:text="Buy"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:layout_x="140dp"
		android:layout_y="50dp">
	</TextView>
		
	<TextView
		android:id="@+id/poptext"
		android:layout_width="250dp"
		android:layout_height="60dp"
		android:text="Have you bought the chekced items?"
		android:textSize="18sp"
		android:textColor="#ff000000"
		android:gravity="center_vertical|center_horizontal"
		android:layout_x="32dp"
		android:layout_y="200dp">
	</TextView>
	
	<Button
		android:id="@+id/confirmbuy_btn"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:text="Yes"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_x="145dp"
		android:layout_y="405dp">
	</Button>

	<Button
		android:id="@+id/cancelbuy_btn"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="Nope"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_x="25dp"
		android:layout_y="405dp">
	</Button>
	
</AbsoluteLayout>
